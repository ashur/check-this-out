{#
 # @prop {string} step
 # @prop {string} subtitle
 # @callable true
 #}
{% macro render( props ) %}
<section
	class="[ center stack ][ measure ][ Step ]"
>
	<div class="[ stack-sm ][ text-center ][]">
		<h3 class="[][ font-heading ][ Step-title ]">Step {{ props.step }}</h3>
		<p>{{ props.subtitle | safe }}</p>
	</div>

	{% if caller %}{{ caller() }}{% endif -%}
</section>
{# <section
	class="[ center stack-lg ][ measure ][]"
