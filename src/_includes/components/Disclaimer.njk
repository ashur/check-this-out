{#
 # @callable true
 #}
{% macro render( props ) %}
<aside class="[ center stack ][ measure ][ Disclaimer ]">
	{% if caller %}{{ caller() }}{% endif -%}
</aside>
{% endmacro %}

{% set criticalStyles %}
<style>
	.Disclaimer {
		--disclaimer-padding-x: var( --size-0 );
		--disclaimer-padding-y: var( --size--1 );
		--measure-size: 32ch;

		filter: grayscale( 1 );
		mix-blend-mode: multiply;

		display: inline-block;
		border: solid var( --theme-disclaimer-color, transparent ) var( --disclaimer-border-width, 4px );
		padding: var( --disclaimer-padding-y ) var( --disclaimer-padding-x );
		font-size: calc( var( --font-size ) * 0.75 );
		font-weight: 500;
	}
</style>
{% endset %}
